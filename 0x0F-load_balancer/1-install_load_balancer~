#!/usr/bin/env bash
# COnfigure HAProxy on the Load balancer
apt-get update
apt-get install -y haproxy=1.6.\*
echo "\nbackend web-backend\n\tbalance roundrobin\n\tserver web1 35.196.163.39:80 check\n\tserver web2 35.185.33.80:80 check\n" >> /etc/haproxy/haproxy.cfg
echo "\nfrontend http\n\tbind *:80\n\tmode http\n\tdefault_backend web-backend\n" >> /etc/haproxy/haproxy.cfg
